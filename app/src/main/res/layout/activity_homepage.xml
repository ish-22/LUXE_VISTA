<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#B3D8B0">

    <!-- Top Navigation Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="end">

        <Button
            android:id="@+id/feedbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Feedbacks"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/faqbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="FAQs"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/movetoaboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="About us"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/movetomainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#1E5F32"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Search"
            android:drawableStart="@drawable/search_24"
            android:background="@drawable/search_bar_background"
            android:padding="10dp"
            android:elevation="4dp"/>
    </LinearLayout>

    <!-- Nearby Attractions Section -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Near by Attractions"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#1E5F32"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#4CAF50"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/beach_tour"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/water_sport"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Dining Recommendations Section -->
    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Dining Recommendations"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#1E5F32"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/dining1"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/dining2"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1E5F32"
        android:gravity="center">

        <ImageView
            android:id="@+id/rooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_booking"
            android:contentDescription="Booking"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/services"
            android:contentDescription="Services"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/offers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_offers"
            android:contentDescription="Offers"
            android:padding="10dp"/>



        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
