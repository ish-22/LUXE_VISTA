                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/room_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ocean_view_room" />

                <TextView
                    android:id="@+id/room_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocean View Suite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/room_description_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luxurious suite with ocean views and private balcony."
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/room_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 25000"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/book_now_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Now"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

